    </div>
    <div class="flex items-center leading-6">
      <%= if @current_user do %>
        <a
          class="px-5 h-12 hover:bg-blue-300 flex items-center"
          href="/dashboard"
          target="_blank"
          title="Phoenix LiveDashboard"
        >
